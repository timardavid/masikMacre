{
  "name": "naptar-app",
  "version": "1.0.0",
  "description": "Naptár alkalmazás napi teendőkezeléssel",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "start": "node server.js & electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "calendar",
    "tasks",
    "naptar"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "cors": "^2.8.5"
  },
  "build": {
    "appId": "com.naptar.app",
    "productName": "Naptár",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/express/**/*",
      "node_modules/sqlite3/**/*",
      "node_modules/cors/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}


