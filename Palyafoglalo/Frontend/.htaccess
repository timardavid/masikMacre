# Enable rewrite engine
RewriteEngine On

# Set base directory
RewriteBase /Palyafoglalo/Frontend/

# Proxy API requests to backend
RewriteCond %{REQUEST_URI} ^/Palyafoglalo/Frontend/api
RewriteRule ^api/(.*)$ /Palyafoglalo/Bakcend/api/$1 [L,P]

# Serve existing files (assets, images, etc.)
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^(.*)$ - [L]

# Serve existing directories
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^(.*)$ - [L]

# For all other requests, serve index.html (SPA routing)
RewriteRule ^(.*)$ index.html [L]
